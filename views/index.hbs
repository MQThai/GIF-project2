<h1>GIF Library</h1>

<nav>
  <a class="button" href="/new">Add a GIF</a>
</nav>

<div>
  <ul>
  {{#each gifs}}
    <li>
      {{!-- target="_blank" opens image in a new tab --}}
      <a class="thumbnail" target="_blank" href="{{this.url}}" style="width:75px"><img src="{{this.url}}"></a>
      <a target="_blank" href="{{this.id}}">{{this.title}}</a>
      <a class="button" href="/edit/{{this.id}}">edit</a>
  {{/each}}
  </li>
  </ul>
</div>