<h2>Edit Gif:</h2>

<form action="/{{gif.id}}?_method=put" method="POST" accept-charset="utf-8">
  <p>
    URL:<br><input type="text" name="URL" size="100" value="{{gif.url}}"/><br>
    Title:<br><input type="text" name="title" size="100" value="{{gif.title}}"/><br>
    Tags:<br><input type="text" name="tags" size="100" value="{{gif.tags}}"/>
  </p>
  <input class="button" type="submit" value="Edit">
</form>

<form action="/{{gif.id}}?_method=delete" method="POST">
  <input class="button" type="submit" value="Delete">
</form>