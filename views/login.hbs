{{#if message}}
  <div class="alert">{{message}}</div>
{{/if}}

<h2>Log in</h2>

<form method="post" action="/login">
  <span>
    <label>Username</label>
    <input type="text" name="username">
  </span>

  <span>
    <label>Password</label>
    <input type="password" name="password">
  </span>

  <input type="submit" value="Log in">
</form>